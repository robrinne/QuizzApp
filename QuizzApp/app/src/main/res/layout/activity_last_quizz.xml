<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_android"
    tools:context="aston.fr.quizzapp.quizz.LastQuizzActivity">

    <TextView
        android:id="@+id/textViewMsgScore"
        android:layout_marginVertical="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Votre score est de 10/10"
        android:textColor="@color/blanc"
        android:textSize="50dp" />

    <Button
        android:id="@+id/buttonGoToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Quitter et revenir au menu"
        android:background="@color/buttonMenu2"
        android:textColor="@color/blanc"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:onClick="goToMenu"/>

</LinearLayout>
